<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 class="h1TextCenter">Post a new item</h1>
		<div class="divFormWidthMargin">
			<form action="/items" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="name" name="name" required="required">			
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01" required="required">			
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="bidPrice" name="bidPrice" min="0.01" step="0.01" required="required">			
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="image url" name="image" required="required">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="description" name="description" required="required">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/items">View Items</a>
		</div>
		
	</div>
</div>
<% include ../partials/footer %>
