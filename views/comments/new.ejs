<% include ../partials/header %>
<div class="container">
	<div class="row">
		<h1 class="h1TextCenter">Add New Comment to <%=item.name %> </h1>
		<div class="divFormWidthMargin">
			<form action="/items/<%= item._id %>/comments" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="text" name="comment[text]">			
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="author" name="comment[author]">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>
			</form>
			<a href="/items">View Items</a>
		</div>
		
	</div>
</div>
<% include ../partials/footer %>
